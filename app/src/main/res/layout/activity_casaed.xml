<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".erikadaniel.Casaed"
    android:background="@drawable/fondocasaed">

    <ImageView
        android:id="@+id/senal1"
        android:layout_width="41dp"
        android:layout_height="338dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267"
        app:srcCompat="@drawable/palosenaled" />

    <ImageView
        android:id="@+id/senal2"
        android:layout_width="41dp"
        android:layout_height="338dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btncuerpo"
        app:srcCompat="@drawable/palosenaled" />

    <ImageButton
        android:id="@+id/btntierra"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnorientacion"
        app:srcCompat="@drawable/btntierraed" />

    <ImageButton
        android:id="@+id/btnfamilia"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/senal1"
        app:srcCompat="@drawable/btnfamiliaed"
        tools:layout_editor_absoluteX="-12dp" />

    <ImageButton
        android:id="@+id/btnorientacion"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncuerpo"
        app:srcCompat="@drawable/btnorientacioned" />

    <ImageButton
        android:id="@+id/btngeometrica"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:text="FGURAS GEOMETRICAS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnorientacion"
        app:srcCompat="@drawable/btnfigurased" />

    <ImageButton
        android:id="@+id/btndomestico"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:text="ANIMALES (Ushamera)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntierra"
        app:srcCompat="@drawable/btnanimalesed" />

    <ImageButton
        android:id="@+id/btncuerpo"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfamilia"
        app:srcCompat="@drawable/btncuerpoed" />


</androidx.constraintlayout.widget.ConstraintLayout>