<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yatulve.Herramientas"
    android:background="@drawable/fondoherramientavve">

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="255dp"
        android:layout_height="101dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titleherramientas" />

    <ImageView
        android:id="@+id/imgtitlepala"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMachete"
        app:srcCompat="@drawable/titlepala" />

    <ImageView
        android:id="@+id/imgtitlehacha"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAzadon"
        app:srcCompat="@drawable/titlehacha" />

    <ImageView
        android:id="@+id/imgPala"
        android:layout_width="112dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toEndOf="@+id/imgtitlepala"
        app:layout_constraintTop_toBottomOf="@+id/imgtitlemachete"
        app:srcCompat="@drawable/palave" />

    <ImageView
        android:id="@+id/imgtitlemachete"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imgMachete"
        app:layout_constraintTop_toBottomOf="@+id/imgHacha"
        app:srcCompat="@drawable/titlemachete" />

    <ImageView
        android:id="@+id/imgAzadon"
        android:layout_width="112dp"
        android:layout_height="105dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView35"
        app:srcCompat="@drawable/azadonve" />

    <ImageView
        android:id="@+id/imgMachete"
        android:layout_width="114dp"
        android:layout_height="100dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtitlehacha"
        app:srcCompat="@drawable/macheteve" />

    <ImageView
        android:id="@+id/imgHacha"
        android:layout_width="110dp"
        android:layout_height="97dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgtitlehacha"
        app:layout_constraintTop_toBottomOf="@+id/imgtitleazadon"
        app:srcCompat="@drawable/hachave" />

    <ImageView
        android:id="@+id/imgtitleazadon"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/imageView35"
        app:srcCompat="@drawable/titleazadon" />

</androidx.constraintlayout.widget.ConstraintLayout>